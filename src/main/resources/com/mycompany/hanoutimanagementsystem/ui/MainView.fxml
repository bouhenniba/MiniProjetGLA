<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.hanoutimanagementsystem.ui.MainViewController"
            prefWidth="1400" prefHeight="900">

    <!-- شريط العنوان العلوي -->
    <top>
        <VBox styleClass="header">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>
            <Label text="نظام إدارة حنوتي" styleClass="header-title"/>
            <Label text="Hanouti Management System - Professional Store Management" styleClass="header-subtitle"/>
        </VBox>
    </top>

    <!-- محتوى التبويبات الرئيسي -->
    <center>
        <HBox alignment="CENTER" style="-fx-background-color: transparent;">
            <padding>
                <Insets top="25" right="45" bottom="25" left="45"/>
            </padding>

            <VBox maxWidth="1300" HBox.hgrow="ALWAYS">
                <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE"
                         VBox.vgrow="ALWAYS" tabMinWidth="200" tabMaxWidth="400">
                    <tabs>
                        <Tab text="الأصناف / Items">
                            <fx:include source="ItemsView.fxml"/>
                        </Tab>
                        <Tab text="الأقسام / Sections">
                            <fx:include source="SectionsView.fxml"/>
                        </Tab>
                        <Tab text="الموردين / Vendors">
                            <fx:include source="VendorsView.fxml"/>
                        </Tab>
                        <Tab text="العمليات / Operations">
                            <fx:include source="OperationsView.fxml"/>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>
        </HBox>
    </center>

    <!-- شريط الحالة السفلي -->
    <bottom>
        <HBox styleClass="status-bar">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>
            <Label fx:id="statusLabel" text="جاهز - Ready ✓"/>
        </HBox>
    </bottom>

</BorderPane>
