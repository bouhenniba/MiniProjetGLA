<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.hanoutimanagementsystem.ui.VendorsViewController">
    
    <top>
        <VBox spacing="15" styleClass="input-section">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="إدارة الموردين - Vendors Management" styleClass="section-title"/>
            
            <GridPane hgap="15" vgap="12">
                <Label text="رقم الرخصة / License Number:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="licenseField" promptText="رقم الرخصة" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>
                
                <Label text="جهة الاتصال / Contact Name:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <TextField fx:id="contactField" promptText="اسم جهة الاتصال" 
                          GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="250"/>
            </GridPane>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="إضافة / Add" onAction="#handleAdd" styleClass="primary-button"/>
                <Button text="تحديث / Update" onAction="#handleUpdate" styleClass="primary-button"/>
                <Button text="حذف / Delete" onAction="#handleDelete" styleClass="danger-button"/>
                <Button text="مسح / Clear" onAction="#handleClear"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="بحث / Search:"/>
                <TextField fx:id="searchField" promptText="ابحث برقم الرخصة أو جهة الاتصال" 
                          prefWidth="350" onKeyReleased="#handleSearch"/>
                <Button text="إعادة تحميل / Refresh" onAction="#handleRefresh"/>
            </HBox>
            
            <TableView fx:id="vendorsTable" styleClass="data-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="licenseColumn" text="رقم الرخصة / License" prefWidth="200"/>
                    <TableColumn fx:id="contactColumn" text="جهة الاتصال / Contact" prefWidth="250"/>
                    <TableColumn fx:id="itemsSuppliedColumn" text="عدد الأصناف / Items Count" prefWidth="150"/>
                </columns>
                <placeholder>
                    <Label text="لا يوجد موردين - No vendors found"/>
                </placeholder>
            </TableView>
        </VBox>
    </center>
    
</BorderPane>