<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mycompany.hanoutimanagementsystem.ui.SectionsViewController"
            fitToWidth="true" style="-fx-background-color: transparent;">

    <VBox spacing="20">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <Label text="إدارة الأقسام - Sections Management" styleClass="section-title"/>

        <GridPane hgap="18" vgap="15">
            <columnConstraints>
                <ColumnConstraints minWidth="100" prefWidth="130"/>
                <ColumnConstraints minWidth="200" prefWidth="320"/>
                <ColumnConstraints minWidth="100" prefWidth="130"/>
                <ColumnConstraints minWidth="200" prefWidth="320"/>
            </columnConstraints>

            <Label text="الرمز / Code:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="codeField" promptText="رمز القسم" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="التسمية / Label:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="labelField" promptText="اسم القسم" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
        </GridPane>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Button text="إضافة / Add" onAction="#handleAdd" styleClass="primary-button" prefWidth="120"/>
            <Button text="تحديث / Update" onAction="#handleUpdate" styleClass="primary-button" prefWidth="120"/>
            <Button text="حذف / Delete" onAction="#handleDelete" styleClass="danger-button" prefWidth="120"/>
            <Button text="مسح / Clear" onAction="#handleClear" prefWidth="120"/>
        </HBox>

        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="بحث:" style="-fx-font-weight: bold; -fx-font-size: 15px;"/>
            <TextField fx:id="searchField" promptText="ابحث بالرمز أو التسمية" prefWidth="350" onKeyReleased="#handleSearch"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="تحديث" onAction="#handleRefresh" prefWidth="110"/>
        </HBox>

        <TableView fx:id="sectionsTable" styleClass="data-table" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="codeColumn" text="الرمز / Code" prefWidth="200"/>
                <TableColumn fx:id="labelColumn" text="التسمية / Label" prefWidth="450"/>
                <TableColumn fx:id="itemCountColumn" text="عدد الأصناف" prefWidth="190"/>
            </columns>
            <placeholder>
                <Label text="لا توجد أقسام - No sections found" style="-fx-font-size: 16px;"/>
            </placeholder>
        </TableView>

    </VBox>
</ScrollPane>
